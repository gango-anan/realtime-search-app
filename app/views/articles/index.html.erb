<h1>Real Time Article Search</h1>
<div class="search-bar" >
    <%= form_with(url: articles_path, method: :get, data: { turbo_frame: "search-history", turbo_frame: "search-results", turbo_action: "advance", controller: "search", action: "input->search#submit" }) do |form| %>
        <%= form.label :query, "Search by article title" %>
        <div>
            <%= form.text_field :query, placeholder: "Search article" %>
            <%= form.submit "Search" %>
        </div>
    <% end %>
</div>

<div>
    <div>
        <%= render "articles", articles: @articles %>
    </div>
    <div>
        <%= render @search_histories %>
    </div>
</div>